###############################################################################
#	Variables		#
###############################################################################

NAME = libft_malloc_$(HOSTTYPE).so
AUTHOR = cterblan \| cterblan@student.wethinkcode.co.za

###############################################################################
#	SOURCES			#
###############################################################################

SRC = $(shell find . -name *.c)
OBJ := $(SRC:%.c=$(OBJ_DIR)%.o)

###############################################################################
#	FILE SORTING	#
###############################################################################

OBJ_DIR = obj
SRC_DIR = src
INC_DIR = includes
LIB_DIR = lib

###############################################################################
#	COMPILER		#
###############################################################################

CC_FLAGS = Wall Werror Wextra
CC = gcc $(CC_FLAGS)

###############################################################################
#	LIBRARIES		#
###############################################################################

FT_PRINTF = ft_printf
FT_PRINTF_DIR = $(LIB_DIR)/$(FT_PRINTF)
FT_PRINTF_FLAGS := -lftprintf

###############################################################################
#	RULES			#
###############################################################################

all: $(NAME)

$(NAME): $(FT_PRINTF)
	@ar rcs $(NAME) $(OBJ) $(FT_PRINTF_DIR)/obj/*.o

$(FT_PRINTF):
	@make all -C $(FT_PRINTF_DIR)

clean:
	@make clean -C $(FT_PRINTF_DIR)
	@rm -rf $(OBJ_DIR)

fclean: clean
	@make fclean -C $(FT_PRINTF_DIR)
	@rm -rf $(NAME)

re: fclean all

workspace:
	@touch author
	@echo $(AUTHOR) > author
	@mkdir -p $(SRC_DIR)
	@mkdir -p $(LIB_DIR)
	@mkdir -p $(INC_DIR)

###############################################################################
#	Specials	#
###############################################################################

.PHONEY := all clean fclean re workspace

.SILENT:

.PRECIOUS := author

###############################################################################
#	END			#
###############################################################################
